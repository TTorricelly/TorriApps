# Production Environment Configuration Template
# Copy this file to .env for production deployment

# Server Configuration - CHANGE THIS TO YOUR PRODUCTION DOMAIN
SERVER_HOST=https://api.torriapps.com

# Database Configuration - CHANGE THIS TO YOUR PRODUCTION DATABASE
DATABASE_URL=postgresql://user:password@prod-db-host:5432/torriapps_prod

# Security - GENERATE A STRONG SECRET KEY
SECRET_KEY=your-very-secure-production-secret-key

# Debug Mode - ALWAYS FALSE IN PRODUCTION
DEBUG=false

# Redis Configuration - CHANGE TO PRODUCTION REDIS
REDIS_URL=redis://prod-redis-host:6379/0

# Schema configuration
DEFAULT_SCHEMA_NAME=public

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_ALGORITHM=HS256